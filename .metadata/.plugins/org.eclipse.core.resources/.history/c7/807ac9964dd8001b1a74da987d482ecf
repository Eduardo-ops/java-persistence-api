package br.com.univas.cliente.model;

import javax.persistence.EntityManager;
import javax.persistence.EntityManagerFactory;
import javax.persistence.Persistence;

import java.util.List;

public class DetalhesClienteDAO {

	private static DetalhesClienteDAO instance;
	protected EntityManager entityManager;

	public static DetalhesClientesDAO getInstance() {
		if (instance == null) {
			instance = new DetalhesClienteDAO();
		}
		return instance;
	}

	private DetalhesClientesDAO() {
		entityManager = getEntityManager();
	}

	private EntityManager getEntityManager() {
		// Usando a configuração presente no arquivo persistence.xml, possibilitando
		// assim, criação de uma instância de EntityManagerFactory.
		EntityManagerFactory factory = Persistence.createEntityManagerFactory("ClienteSystemPU");
		// Verificando se nunca foi criado.
		if (entityManager == null) {
			entityManager = factory.createEntityManager();
		}
		return entityManager;
	}

	public DetalhesCliente getById(final int id) {
		return entityManager.find(DetalhesCliente.class, id);
	}

	@SuppressWarnings("unchecked")
	public List<DetalhesCliente> findAll() {
		return entityManager.createQuery("FROM" + DetalhesCliente.class.getName()).getResultList();
	}

	// Create
	public void createDetalheCliente(DetalheCliente cliente) {
		// Objeto cliente sendo gerenciado pelo jpa, pegando a informação(dados) e
		// persistindo no banco de dados.
		entityManager.getTransaction().begin();
		entityManager.persist(cliente);
		entityManager.getTransaction().commit();
	}

	// Read
	public DetalheCliente readById(final int id) {
		// Objeto cliente sendo gerenciado pelo jpa, pegando a informação(dados) e
		// buscando no banco de dados.
		return entityManager.find(DetalheCliente.class, id);
	}

	// Update
	public void updateCliente(DetalheCliente cliente) {
		// Objeto cliente sendo gerenciado pelo jpa, pegando a informação(dados) e
		// realizando modificaççoes no banco de dados.
		entityManager.getTransaction().begin();
		entityManager.merge(cliente);
		entityManager.getTransaction().commit();
	}

	// Delete
	public void deleteCliente(DetalheCliente cliente) {
		// Objeto cliente sendo gerenciado pelo jpa, pegando a informação(dados) e
		// deletando no banco de dados.
		entityManager.getTransaction().begin();
		cliente = entityManager.find(DetalheCliente.class, cliente.getIdDetalhe());
		entityManager.remove(cliente);
		entityManager.getTransaction().commit();
	}

}
